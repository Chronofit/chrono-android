<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/large_element_padding">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/stats_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensans_bold"
                    android:padding="@dimen/medium_element_padding"
                    android:text="@string/stats"
                    android:textSize="@dimen/xl_huge_text" />

                <TextView
                    android:id="@+id/total_circuits_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/large_element_padding"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="center"
                    android:text="@string/total_circuits"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/xl_medium_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="64"
                    android:textSize="@dimen/xl_huge_text" />

                <TextView
                    android:id="@+id/total_time_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xl_large_element_padding"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="center"
                    android:text="@string/total_time"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/xl_medium_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="45hr 65min"
                    android:textSize="@dimen/xl_huge_text" />

            </LinearLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:contentDescription="@string/todo"
            android:focusable="true"
            android:padding="@dimen/medium_element_padding"
            android:src="@drawable/ic_arrow_back" />

    </RelativeLayout>

</layout>