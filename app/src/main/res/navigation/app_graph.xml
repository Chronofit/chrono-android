<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="ca.chronofit.chrono.SplashFragment"
        android:label="SplashFragment">

        <action
            android:id="@+id/navigate_to_dashboard"
            app:destination="@+id/dashboard_fragment" />

    </fragment>

    <fragment
        android:id="@+id/dashboard_fragment"
        android:name="ca.chronofit.chrono.circuit.CircuitDashboardFrag"
        tools:layout="@layout/fragment_circuit_dashboard" />

</navigation>