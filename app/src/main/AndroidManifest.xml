<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.chronofit.chrono">

    <application
        android:icon="@drawable/ic_chrono_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_chrono_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".main.circuit.CircuitCreate" />

        <activity android:name=".main.MainActivity" />

        <activity android:name=".main.circuit.CircuitTimerActivity" />

        <service
            android:name=".util.services.FirebaseCloudMessaging"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".util.services.NotificationIntentService"
            android:exported="false" />

        <!--FCM Notification Defaults   -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_fcm_notification_channel_id" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification_logo" />
    </application>
</manifest>